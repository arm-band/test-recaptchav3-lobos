<%- include('partial/_util') -%>
<%
    parameters = {
        title: 'Robos',
        description: 'reCAPTHCA v3 の試験',
        errFlag: false,
        reCAPTCHAkey: 1
    }
-%>
<%- include('partial/_head', { parameters }) -%>
<body>
<%- include('partial/_header') -%>
<main class="l-main">
    <section class="container py-5">
        <h1><i class="fas fa-fw fa-long-arrow-alt-up mr-2" aria-hidden="true"></i><%= parameters.title %><small class="ml-2" id="hello"></small></h1>
        <p><%= parameters.description %></p>
    </section>
    <section class="container pb-5">
        <h2>フォーム<%= parameters.reCAPTCHAkey + 1 %></h2>
        <form method="post" action="./procedure.php">
            <div class="mb-3 row">
                <label for="loslobos<%= parameters.reCAPTCHAkey %>" class="form-label col-md-2">テキスト</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" id="loslobos<%= parameters.reCAPTCHAkey %>">
                </div>
            </div>
<% if(siteKeys[parameters.reCAPTCHAkey]) { -%>
            <input type="hidden" name="g-recaptcha-response" id="g-recaptcha-response">
            <input type="hidden" name="sitekey-number" id="sitekey-number" value="<%= parameters.reCAPTCHAkey %>">
<% } -%>
            <button type="submit" class="btn btn-primary">送信する</button>
        </form>
    </section>
</main>
<%- include('partial/_footer') -%>
<%- include('partial/_js_loader', { siteKeys, parameters }) -%>
</body>
</html>